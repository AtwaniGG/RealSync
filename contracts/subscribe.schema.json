{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RealSync Subscribe Events (Backend â†’ Frontend via WS /ws)",
  "description": "Frozen v1 contract for all events broadcast to dashboard subscribers.",
  "oneOf": [
    {
      "type": "object",
      "title": "metrics",
      "required": ["type", "sessionId", "data"],
      "properties": {
        "type": { "const": "metrics" },
        "sessionId": { "type": "string" },
        "data": {
          "type": "object",
          "required": ["timestamp", "source", "emotion", "identity", "deepfake", "trustScore", "confidenceLayers"],
          "properties": {
            "timestamp": { "type": "string", "format": "date-time" },
            "source": { "type": "string", "enum": ["simulated", "external"] },
            "emotion": {
              "type": "object",
              "required": ["label", "confidence", "scores"],
              "properties": {
                "label": { "type": "string", "enum": ["Happy", "Neutral", "Angry", "Fear", "Surprise", "Sad"] },
                "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
                "scores": {
                  "type": "object",
                  "properties": {
                    "Happy": { "type": "number" },
                    "Neutral": { "type": "number" },
                    "Angry": { "type": "number" },
                    "Fear": { "type": "number" },
                    "Surprise": { "type": "number" },
                    "Sad": { "type": "number" }
                  }
                }
              }
            },
            "identity": {
              "type": "object",
              "required": ["samePerson", "embeddingShift", "riskLevel"],
              "properties": {
                "samePerson": { "type": "boolean" },
                "embeddingShift": { "type": "number", "minimum": 0, "maximum": 1 },
                "riskLevel": { "type": "string", "enum": ["low", "medium", "high"] }
              }
            },
            "deepfake": {
              "type": "object",
              "required": ["authenticityScore", "riskLevel"],
              "properties": {
                "authenticityScore": { "type": "number", "minimum": 0, "maximum": 1 },
                "model": { "type": "string" },
                "riskLevel": { "type": "string", "enum": ["low", "medium", "high"] }
              }
            },
            "trustScore": { "type": "number", "minimum": 0, "maximum": 1 },
            "confidenceLayers": {
              "type": "object",
              "properties": {
                "audio": { "type": "number" },
                "video": { "type": "number" },
                "behavior": { "type": "number" }
              }
            }
          }
        }
      }
    },
    {
      "type": "object",
      "title": "transcript",
      "required": ["type", "sessionId", "text", "isFinal", "ts"],
      "properties": {
        "type": { "const": "transcript" },
        "sessionId": { "type": "string" },
        "text": { "type": "string" },
        "speaker": { "type": "string" },
        "isFinal": { "type": "boolean" },
        "confidence": { "type": ["number", "null"] },
        "ts": { "type": "string", "format": "date-time" }
      }
    },
    {
      "type": "object",
      "title": "alert",
      "required": ["type", "sessionId", "alertId", "severity", "category", "title", "message", "ts"],
      "properties": {
        "type": { "const": "alert" },
        "sessionId": { "type": "string" },
        "alertId": { "type": "string", "format": "uuid" },
        "severity": { "type": "string", "enum": ["low", "medium", "high", "critical"] },
        "category": { "type": "string", "enum": ["deepfake", "identity", "emotion", "fraud", "scam", "altercation"] },
        "title": { "type": "string" },
        "message": { "type": "string" },
        "source": {
          "type": "object",
          "properties": {
            "model": { "type": "string" },
            "confidence": { "type": "number" }
          }
        },
        "ts": { "type": "string", "format": "date-time" }
      }
    },
    {
      "type": "object",
      "title": "suggestion",
      "required": ["type", "sessionId", "severity", "title", "message", "ts"],
      "properties": {
        "type": { "const": "suggestion" },
        "sessionId": { "type": "string" },
        "severity": { "type": "string", "enum": ["low", "medium", "high"] },
        "title": { "type": "string" },
        "message": { "type": "string" },
        "ts": { "type": "string", "format": "date-time" }
      }
    },
    {
      "type": "object",
      "title": "sourceStatus",
      "required": ["type", "sessionId", "status", "ts"],
      "properties": {
        "type": { "const": "sourceStatus" },
        "sessionId": { "type": "string" },
        "status": { "type": "string", "enum": ["connected", "degraded", "disconnected"] },
        "streams": {
          "type": "object",
          "properties": {
            "audio": { "type": "boolean" },
            "video": { "type": "boolean" },
            "captions": { "type": "boolean" }
          }
        },
        "ts": { "type": "string", "format": "date-time" }
      }
    }
  ]
}
